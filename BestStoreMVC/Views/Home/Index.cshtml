@model List<Item>
@{
    ViewData["Title"] = "Home Page";
}

@{
}



<h2 class="text-center mb5">List of Items</h2>
<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Create">New Item</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>BRAND</th>
            <th>CATEGORY</th>
            <th>PRICE</th>
            <th>CREATED-AT</th>
            <th>ACTION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Brand</td>
                <td>@item.Category</td>
                <td>@(item.Price)$</td>
                <td>@item.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Delete"
                       asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>

                </td>
            </tr>

        }
    </tbody>
</table>